{
  "name": "Stethoscope",
  "version": "2.0.0",
  "private": true,
  "homepage": "./",
  "author": "Netflix",
  "description": "Local Stethoscope app",
  "main": "src/start.js",
  "build": {
    "appId": "com.netflix.stethoscope-local",
    "extends": null,
    "productName": "Stethoscope",
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "extraResources": [
        "bin/osqueryd_darwin"
      ],
      "files": [
        "practices/*",
        "public/**",
        "resolvers/**",
        "sources/*",
        "src/lib/**",
        "src/*.json",
        "src/*.js",
        "server.js",
        "schema.graphql"
      ]
    },
    "win": {
      "target": "nsis",
      "extraResources": [
        "bin/osqueryd.exe"
      ],
      "files": [
        "practices/*",
        "build/**",
        "public/**",
        "resolvers/**",
        "sources/*",
        "src/lib/**",
        "src/*.json",
        "src/*.js",
        "server.js",
        "schema.graphql"
      ]
    },
    "nsis": {
      "perMachine": true
    },
    "linux": {
      "target": "AppImage",
      "category": "System",
      "extraResources": [
        "bin/osqueryi_linux"
      ],
      "files": [
        "practices/*",
        "build/**",
        "public/**",
        "resolvers/**",
        "sources/*",
        "src/lib/**",
        "src/*.json",
        "src/*.js",
        "server.js",
        "schema.graphql"
      ]
    },
    "protocols": [
      {
        "name": "stethoscope",
        "role": "Viewer",
        "schemes": [
          "stethoscope"
        ]
      }
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "registerServiceWorker.js"
    ]
  },
  "scripts": {
    "start": "nf start -p 12000",
    "test": "react-scripts test --env=jsdom",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:start": "node src/start-react",
    "react:start": "react-scripts start",
    "build": "rm -r dist/ ; react-scripts build && electron-builder -mwl",
    "postinstall": "electron-builder install-app-deps",
    "build:react": "react-scripts build",
    "build:mac": "rm -r dist/; react-scripts build && electron-builder -m",
    "build:windows": "react-scripts build && electron-builder -w",
    "build:linux": "rm -r dist/ ; react-scripts build && electron-builder -l",
    "lint": "standard --fix src/*.js src/**/*.js resolvers/*.js sources/*.js server.js"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "applescript": "^1.0.0",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "electron-settings": "^3.1.4",
    "electron-updater": "^3.0.3",
    "es6-promisify": "^6.0.0",
    "express": "^4.16.2",
    "file-stream-rotator": "git://github.com/andrefarzat/file-stream-rotator.git#b769f580b7c1efc7f494638e728755064042ce81",
    "graphql": "^0.13.2",
    "graphql-server-express": "^1.2.0",
    "graphql-tools": "^2.12.0",
    "helmet": "^3.9.0",
    "js-yaml": "^3.10.0",
    "marked": "^0.3.7",
    "moment": "^2.19.3",
    "node-powershell": "^3.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semver": "^5.4.1",
    "showdown": "^1.8.6",
    "socket.io": "^2.0.4",
    "thrift": "^0.11.0",
    "url-parse": "^1.4.3",
    "winston": "^3.0.0",
    "winston-daily-rotate-file": "^3.3.0"
  },
  "devDependencies": {
    "@heroku/foreman": "^2.0.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "mocha": "^5.2.0",
    "react-scripts": "^1.1.4",
    "standard": "^11.0.1"
  }
}
